{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "esnext",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "lib": ["es5", "es6"],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strict": true,
      "declaration": false,
      "importHelpers": true, // required
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": [
      "src/**/*",
      "src",
      "src", "decs.d.ts"
    ],
}